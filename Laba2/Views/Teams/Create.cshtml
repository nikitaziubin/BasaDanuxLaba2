@model Laba2.ViewModels.DivisioStadiumViwModel

@{
    ViewData["Title"] = "Create";
}

<h1>Search Divisions</h1>

<h4>Choose name stadium</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label">Ім'я команди</label>
                <select asp-for="Team.Name" class="form-control" asp-items="ViewBag.Teams"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Дата@*@Html.DisplayNameFor(model => model.)*@
            </th>
            <th>
                Стадіон@*@Html.DisplayNameFor(model => model.)*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.matches)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stadium.Name)
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
