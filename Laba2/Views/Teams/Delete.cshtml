@model Laba2.ViewModels.DivisioStadiumViwModel

@{
    ViewData["Title"] = "Create";
}

<h1>Search Stadiums</h1>

<h4>Choose team name</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Team.Name" class="control-label">Ім'я команди</label>
                <select asp-for="Team.Name" class="form-control" asp-items="ViewBag.Teams"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Find" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Назва@*@Html.DisplayNameFor(model => model.)*@
            </th>
            <th>
                Місто@*@Html.DisplayNameFor(model => model.)*@
            </th>
            <th>
                Місткість@*@Html.DisplayNameFor(model => model.)*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.stadiums)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Adress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>

            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
